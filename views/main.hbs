<div class="page_header ">
    <h2>Актуальные предложения</h2>
</div>

<div class="page">
    <form class="left_menu" action="/show_filtred" method="post">
        <select name="speciality" id="">
            <option value="all">Все специальности</option>
            {{#each specialities}}
                <option value="{{this.speciality}}">{{this.speciality}}</option>
            {{/each}}
        </select>
        <select name="voivodeship" id="">
            <option value="all">Все воевудства</option>
            <option value="Варминьско-Мазурское">Варминьско-Мазурское</option>
            <option value="Великопольское">Великопольское</option>
            <option value="Западно-Поморское">Западно-Поморское</option>
            <option value="Куявско-Поморское">Куявско-Поморское</option>
            <option value="Лодзинское">Лодзинское</option>
            <option value="Люблинское">Люблинское</option>
            <option value="Любушское">Любушское</option>
            <option value="Мазовецкое">Мазовецкое</option>
            <option value="Малопольское">Малопольское</option>
            <option value="Нижнесилезское">Нижнесилезское</option>
            <option value="Опольское">Опольское</option>
            <option value="Подкарпатское">Подкарпатское</option>
            <option value="Подляское">Подляское</option>
            <option value="Поморское">Поморское</option>
            <option value="Свентокшиское">Свентокшиское</option>
            <option value="Силезское">Силезское</option>
        </select>
        <select name="city" id="">
            <option value="all">Все города</option>
            {{#each cities}}
                <option value="{{this.city}}">{{this.city}}</option>
            {{/each}}
        </select>
        <select name="vacancy_price" id="">
            <option value="all">ЗП</option>
            <option value="0 - 1000">до 1000</option>
            <option value="1000 - 10000">от 1000 до 10000</option>
            <option value="10000 - 30000">от 10000 до 30000</option>
            <option value="30000 - x">от 30000</option>
        </select>
        <select name="work_type" id="">
            <option value="all">График</option>
            {{#each schedules}}
                <option value="{{this.schedule_type}}">{{this.schedule_type}}</option>
            {{/each}}
        </select>
        <select name="country" id="">
            <option value="all">Страна</option>
            {{#each countries}}
                <option value="{{this.country}}">{{this.country}}</option>
            {{/each}}
        </select>
        <button type="submit">Найти</button>
    </form>
    <div class="page_content">
        {{#each vacancies}}
            <div class="each_vacancy">
                <div class="vacancy_info">
                    <div class="title left_vacancy_part">
                        <h3>{{this.vacancies_info.vacancy_title}}</h3>
                    </div>
                    <div class="price">
                        <h3>{{this.vacancies_info.vacancy_price}} ₽</h3>
                    </div>
                </div>
                <div class="vacancy_info">
                    <div class="each_vacancy_desceiption_text left_vacancy_part">
                        <p>{{this.vacancies_info.short_decription}}<a class="show_more" href="/vacancy/{{this.vacancies_info.id}}">Показать больше</a></p>
                    </div>
                </div>
                <div class="vacancy_info">
                    <div class="date left_vacancy_part">
                        <p>Дата публикации: {{this.vacancies_info._date}}</p>
                    </div>
                    <div class="btns">
                        {{#if this.is_fav}}
                            <div class="heart active" onclick="choose_favorites(this, {{this.vacancies_info.id}})">
                                <img src="/static/img/active_heart.png" alt="">
                            </div>
                        {{else}}
                            <div class="heart unactive" onclick="choose_favorites(this, {{this.vacancies_info.id}})">
                                <img src="/static/img/unactive_heart.png" alt="">
                            </div>
                        {{/if}}
                        
                        <div class="vacancy_submit">
                            <a href="/vacancy/{{this.vacancies_info.id}}">Откликнуться</a>
                        </div>
                    </div>
                </div>
            </div> 
        {{/each}}
    </div>
</div>