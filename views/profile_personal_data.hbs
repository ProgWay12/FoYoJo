
    <div class="page_header profile">
        <h2>Личные данные</h2>
    </div>

    <div class="page">
        <form class="left_menu">
            <div class="profile_menu_each selected">
                <a href="/profile_personal_data/{{user_id}}">Профиль</a>
            </div>
            <div class="profile_menu_each">
                <a href="/profile_contacts/{{user_id}}">Обратная связь</a>
            </div>
            <div class="profile_menu_each">
                <a href="/profile_favorites/{{user_id}}">Избранное</a>
            </div>
            <div class="profile_menu_each">
                <a href="/profile_answers/{{user_id}}">Мои отклики</a>
            </div>
            <div class="profile_menu_each logout_btn">
                <a href="/logout">Выйти</a>
            </div>
        </form>
        <div class="page_content">
            <div class="page_content_profile_container">
                <div class="profile_container_img" onclick="upload_avatar()">
                    <img src="{{user_info.avatar_path}}" alt="" id="avatar">
                </div>
                <div class="profile_container_form">
                    <form action="/profile_personal_data_edit/{{user_info.id}}" method="post" enctype="multipart/form-data">
                        <input type="file" name="avatar" style="display: none;" id="avatar_uploader" value="{{user_info.avatar_path}}">
                        <input name="email" type="email" placeholder="Ваш email" value="{{user_info.email}}">
                        <select name="documents" id="">
                            <option value="{{user_info.documents}}">{{user_info.documents}}</option>
                            <option value="Виза">Виза</option>
                            <option value="Безвиз">Безвиз</option>
                            <option value="Карта побыта">Карта побыта</option>
                        </select>
                        <input type="text" name="speciality" placeholder="Специальность" value="{{user_info.speciality}}">
                        <input name="experience" type="number" placeholder="Опыт работы по специальности" value="{{user_info.experience}}">
                        <select name="language_lvl" id="">
                            <option value="{{user_info.language_lvl}}">{{user_info.language_lvl}}</option>
                            <option value="Начальный">Начальный</option>
                            <option value="Ниже среднего">Ниже среднего</option>
                            <option value="Средний">Средний</option>
                            <option value="Выше среднего">Выше среднего</option>
                            <option value="Продвинутый">Продвинутый</option>
                            <option value="Профессиональный уровень">Профессиональный уровень</option>
                        </select>
                        <textarea name="personal_qualities" id="" cols="30" rows="10" placeholder="Опишите ваши личные качества">{{user_info.personal_qualities}}</textarea>
                        <button type="submit">Сохранить</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

