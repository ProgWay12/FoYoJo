<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <title>FoYoJo</title>
    <link rel="stylesheet" href="/static/css/style.css">
    <link rel="stylesheet" href="/static/css/preloader.css">
    <link rel="shortcut icon" href="/static/img/Favicon.png" type="image/png">
</head>
<body>

    {{#if main_page}}
        <div class="preloader">
            <div class="preloader_logo">
                <img src="/static/img/main_logo.png" alt="">
            </div>
            <div class="load-3">
                <div class="line"></div>
                <div class="line"></div>
                <div class="line"></div>
            </div>
        </div>
    {{/if}}

    <div class="adaptive_menu_info">
        <div class="header_buttons">
            <div class="header_buttons_info account_name">
                <a href="/profile_personal_data/{{user_id}}">{{user_name}}</a>
            </div>
            <div class="header_buttons_info">
                <a href="/vacancies">Предложения</a>
            </div>
            <div class="header_buttons_info">
                <a href="/send_application">Оставить заявку</a>
            </div>
            <div class="header_buttons_info">
                <p>mail@mail.ru</p>
            </div>
            <div class="header_buttons_info">
                <p>9(999)999-99-99</p>
            </div>
        </div>
    </div>
    <header>
        <div class="header_logo" onclick="window.location.href = '/'">
            <img src="/static/img/main_logo.png" alt="">
        </div>
        <div class="menu_point">
            <a href="/vacancies">Предложения</a>
        </div>
        <div class="menu_point">
            <a href="/send_application">Оставить заявку</a>
        </div>
        <div class="adaptive_menu" onclick="show_menu(this)">
            <img src="/static/img/adaptive_menu.png" alt="">
        </div>
        <div class="header_account" onclick="window.location.href = '/profile_personal_data/{{user_id}}'">
            <!--
            <div class="account_logo">
                <img src="/static/img/test_logo.png" alt="">
            </div>
            -->
            <div class="account_info">
                <p>{{user_name}}</p>
            </div>
        </div>
    </header>
    <div class="modal_img_player hiden" id="modal_img_player">
        <div class="modal_img_slider">
            {{#if is_null_work_place_imgs}}
                <div class="vacancy_info img_slider" style="display: none;">
                </div>
            {{else}}
                {{#if count_1}}
                    <div class="vacancy_info img_slider">
                        <div class="main_img count_1">
                            <img src="{{img_block.main_img}}" alt="" id="main_img">
                        </div>
                    </div>
                {{else}}
                    {{#if count_2}}
                        <div class="vacancy_info img_slider_main">
                            <div class="arrow hiden">
                                <img src="/static/img/left.png" alt="" onclick="show_prev_modal()">
                            </div>
                            <div class="modal_sliger_body" style="width: 100%;">
                                {{#each img_block.imgs}}
                                    <img src="{{this}}" alt="" onclick="change_main_img(this)">
                                {{/each}}
                            </div>
                            <div class="arrow hiden">
                                <img src="/static/img/right.png" style="float: right;" alt="" onclick="show_next_modal()">
                            </div>
                        </div>
                    {{else}}
                        <div class="vacancy_info img_slider_main">
                            <div class="arrow">
                                <img src="/static/img/left.png" alt="" onclick="show_prev_modal()">
                            </div>
                            <div class="modal_sliger_body">
                                {{#each img_block.imgs}}
                                    <img src="{{this}}" alt="" onclick="change_main_img(this)">
                                {{/each}}
                            </div>
                            <div class="arrow">
                                <img src="/static/img/right.png" style="float: right;" alt="" onclick="show_next_modal()">
                            </div>
                        </div>
                    {{/if}}
                {{/if}}
            {{/if}}
        </div>
    </div>
    <main {{#if main_page}}class="main_page_main"{{/if}}>
        {{{body}}}
    </main>
    <footer>
        <div class="header_logo" onclick="window.location.href = '/'">
            <img src="/static/img/main_logo.png" alt="">
        </div>
        <div class="header_buttons">
            <div class="header_buttons_info">
                <p>mail@mail.ru</p>
            </div>
            <div class="header_buttons_info">
                <p>9(999)999-99-99</p>
            </div>
        </div>
    </footer>
    
    <script src="/static/js/main.js"></script>
    {{#if main_page}}
        <script>
            window.onload = () => {
                document.querySelector(".preloader").classList.add("preload_hiden")
                setTimeout(() => {
                    document.querySelector(".preloader").classList.add("preload_hided")
                }, 2000)
            }
        </script>
    {{/if}}
    
</body>
</html>