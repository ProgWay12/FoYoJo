<div class="page">
    <div class="left_part">
    </div>
    <div class="page_content">
        <div class="page_header ">
            <h2>Новости</h2>
        </div>
        {{#each news}}
            <div class="each_vacancy">
                <div class="vacancy_info">
                    <div class="title left_vacancy_part">
                        <h3>{{this.title}}</h3>
                    </div>
                </div>
                <div class="vacancy_info">
                    <div class="each_vacancy_desceiption_text left_vacancy_part">
                        <p>{{this.short_news_description}}<a class="show_more" href="/news/{{this.id}}">Показать больше</a></p>
                    </div>
                </div>
                <div class="vacancy_info">
                    <div class="date left_vacancy_part">
                        <p>Дата публикации: {{this._date}}</p>
                    </div>
                    <div class="btns">
                        <div class="heart unactive" onclick="delete_news({{this.id}})">
                            <img src="/static/img/delete.png" alt="">
                        </div>
                        <div class="heart unactive" onclick="edit_news({{this.id}})">
                            <img src="/static/img/edit.png" alt="">
                        </div>
                    </div>
                </div>
            </div> 
        {{/each}}
    </div>
</div>