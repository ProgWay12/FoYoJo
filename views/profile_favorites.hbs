
    <div class="page_header profile">
        <h2>Избранное</h2>
    </div>

    <div class="page">
        <form class="left_menu">
            <div class="profile_menu_each">
                <a href="/profile_personal_data/{{user_id}}">Профиль</a>
            </div>
            <div class="profile_menu_each">
                <a href="/profile_contacts/{{user_id}}">Обратная связь</a>
            </div>
            <div class="profile_menu_each selected">
                <a href="/profile_favorites/{{user_id}}">Избранное</a>
            </div>
            <div class="profile_menu_each">
                <a href="/profile_answers/{{user_id}}">Мои отклики</a>
            </div>
        </form>
        <div class="page_content">
            {{#each vacancies}}
                <div class="each_vacancy">
                    <div class="vacancy_info">
                        <div class="title left_vacancy_part">
                            <h3>{{this.vacancy_title}}</h3>
                        </div>
                        <div class="price">
                            <h3>{{this.vacancy_price}} ₽</h3>
                        </div>
                    </div>
                    <div class="vacancy_info">
                        <div class="each_vacancy_desceiption_text left_vacancy_part">
                            <p>{{this.short_decription}}<a class="show_more" href="/vacancy/{{this.id}}">Показать больше</a></p>
                        </div>
                    </div>
                    <div class="vacancy_info">
                        <div class="date left_vacancy_part">
                            <p>Дата публикации: {{this._date}}</p>
                        </div>
                        <div class="btns">
                            <div class="heart active" onclick="choose_favorites(this, {{this.id}})">
                                <img src="/static/img/active_heart.png" alt="">
                            </div>

                            <div class="vacancy_submit">
                                <a href="/vacancy/{{this.id}}">Откликнуться</a>
                            </div>
                        </div>
                    </div>
                </div> 
            {{/each}}
        </div>
    </div>
